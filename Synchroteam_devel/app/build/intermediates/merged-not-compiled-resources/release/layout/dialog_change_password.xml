<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/paddingTopOrangeButton"
                app:cardPreventCornerOverlap="false">


                <LinearLayout
                    android:paddingBottom="@dimen/txt10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.synchroteam.TypefaceLibrary.TextView
                        android:layout_width="match_parent"
                        android:id="@+id/txt_change_pwd_title"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boxframe_serial_title_layout"
                        android:gravity="center"
                        android:padding="@dimen/paddingReportsTextTabsReports"
                        android:singleLine="true"
                        android:text="@string/textChangePwdTitle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/startActivityTextSize"
                        fontify:font_name="@string/fontName_avenir" />
                    <ScrollView
                        android:layout_weight="1"
                        android:layout_below="@+id/txt_change_pwd_title"
                        android:paddingLeft="@dimen/txt20dp"
                        android:paddingRight="@dimen/txt20dp"
                        android:id="@+id/sv_change_pwd"
android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                                               >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:orientation="vertical"
                           >


                            <com.synchroteam.TypefaceLibrary.TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:text="@string/textDomainName"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.EditTextAvenir
                                android:id="@+id/txt_change_pwd_domain"
                                android:layout_width="match_parent"
android:singleLine="true"
                                android:layout_height="wrap_content"
                                android:background="@drawable/boxframe_text"
                                android:gravity="left|center"
                                android:paddingLeft="@dimen/paddingTopOrangeButton"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />


                            <com.synchroteam.TypefaceLibrary.TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="left|center"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:text="@string/textUserName"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.EditTextAvenir
                                android:id="@+id/txt_change_pwd_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/boxframe_text"
                                android:gravity="left|center"
                                android:singleLine="true"
                                android:paddingLeft="@dimen/paddingTopOrangeButton"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="left|center"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:text="@string/textCurrrentPwd"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.EditTextAvenir
                                android:id="@+id/txt_change_pwd_current_pwd"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:layout_height="wrap_content"
                                android:background="@drawable/boxframe_text"
                                android:gravity="left|center"
                                android:paddingLeft="@dimen/paddingTopOrangeButton"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"
android:inputType="textPassword"

                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="left|center"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:text="@string/textNewPwd"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.EditTextAvenir
                                android:id="@+id/txt_change_pwd_new_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/boxframe_text"
                                android:gravity="left|center"
                                android:paddingLeft="@dimen/paddingTopOrangeButton"
                                android:paddingTop="5dp"
                                android:inputType="textPassword"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"
                                android:singleLine="true"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="left|center"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:paddingBottom="@dimen/margin_small"

                                android:text="@string/textConfirmPwd"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />

                            <com.synchroteam.TypefaceLibrary.EditTextAvenir
                                android:id="@+id/txt_change_pwd_confirm_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/boxframe_text"
                                android:gravity="left|center"
                                android:paddingLeft="@dimen/paddingTopOrangeButton"
                                android:paddingTop="5dp"
                                android:paddingRight="@dimen/paddingTopOrangeButton"
                                android:inputType="textPassword"
                                android:paddingBottom="@dimen/margin_small"
                                android:singleLine="true"
                                android:textColor="@color/invoice_text_color"
                                android:textSize="@dimen/textSizeDaysTv"
                                fontify:font_name="@string/fontName_avenir" />


                        </LinearLayout>
                    </ScrollView>
                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/btn_change_pwd"


                        android:layout_marginLeft="@dimen/txt20dp"
                        android:layout_marginRight="@dimen/txt20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/txt20dp"
                        android:background="@drawable/boxframe_textview_layout"
                        android:gravity="center"
                        android:paddingTop="@dimen/txt10dp"
                        android:paddingBottom="@dimen/txt10dp"
                        android:singleLine="true"
                        android:text="@string/textChangePwdTitle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/startActivityTextSize"
                        android:textStyle="bold"
                        fontify:font_name="@string/fontName_avenir" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/lay_close"
            android:layout_width="@dimen/dialog_clock_in_out_cancel_height"
            android:layout_height="@dimen/dialog_clock_in_out_cancel_height"
            android:layout_gravity="right"
            android:background="@drawable/bg_grey_circle"
            android:gravity="center">

            <com.synchroteam.TypefaceLibrary.TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/fa_close"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSizeReportsListOfValues"
                android:textStyle="bold"
                fontify:font_name="@string/fontName_fontAwesome" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
             />
    </RelativeLayout>

</LinearLayout>