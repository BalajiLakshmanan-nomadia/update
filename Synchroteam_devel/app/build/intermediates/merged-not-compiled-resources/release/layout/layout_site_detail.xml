<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/containerClientDetials"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/containerClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/cell_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/clientNameLableTv"
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/textJobCustomerLableTv" />

                    <ImageView
                        android:id="@+id/cloudClientIconIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/eye_customer" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/clientNameDataTv"
                        style="@style/styleDatTextViewJobDiscription"
                        android:layout_alignLeft="@+id/clientNameLableTv"
                        android:layout_below="@+id/clientNameLableTv"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerSiteInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/cell_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/titleSiteLableTv"
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/textSiteLable" />

                    <ImageView
                        android:id="@+id/sitePublicLinkIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/cloud" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/dataSitelableTv"
                        style="@style/styleDatTextViewJobDiscriptionInformation"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/titleSiteLableTv"
                        android:layout_below="@+id/titleSiteLableTv"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/cell_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/addressLableTv"
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/textAddressLable" />

                    <ImageView
                        android:id="@+id/locationSiteIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:src="@drawable/dis_map_org_icon_selected" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/addressDataTv"
                        style="@style/styleDatTextViewJobDiscription"
                        android:layout_alignLeft="@+id/addressLableTv"
                        android:layout_below="@+id/addressLableTv"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@+id/locationSiteIv" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerJobInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/cell_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/titleContactInformationTv"
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/textContactLableTv" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/dataContactInformationTv"
                        style="@style/styleDatTextViewJobDiscriptionInformation"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/titleContactInformationTv"
                        android:layout_below="@+id/titleContactInformationTv"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerClientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/cell_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/clientEmailLableTv"
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/textJobEmailLableTv" />

                    <ImageView
                        android:id="@+id/emailClientIconIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/email_icon" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/clientEmailDataTv"
                        style="@style/styleDatTextViewJobDiscription"
                        android:layout_alignLeft="@+id/clientEmailLableTv"
                        android:layout_below="@+id/clientEmailLableTv"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas"
                        android:layout_toLeftOf="@+id/emailClientIconIv" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/dividerLinePhone"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/cell_divider_line" />

            <LinearLayout
                android:id="@+id/containerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:text="@string/textJobPhoneLableTv" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/jobPhoneDataTv"
                        style="@style/styleDatTextViewJobDiscription"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/phoneIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/phone_icon_selected" />
            </LinearLayout>

            <ImageView
                android:id="@+id/dividerLineMobile"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/cell_divider_line" 
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/containerMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <com.synchroteam.TypefaceLibrary.TextView
                        style="@style/styleHeadingsTextViewJobDiscription"
                        android:text="@string/textJobMobileLableTv" />

                    <com.synchroteam.TypefaceLibrary.TextView
                        android:id="@+id/jobMobileDataTv"
                        style="@style/styleDatTextViewJobDiscription"
                        android:layout_marginTop="@dimen/marginTopDiscriptionJobDetailDatas" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/mobileIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/mobile_call" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/cell_divider_line" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progresBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>