<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semiTransparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/widthParentAddAttachment"
        android:layout_height="wrap_content"
        android:background="@color/backAddAttachmentDialog"
        android:orientation="vertical">

        <com.synchroteam.TypefaceLibrary.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backLableAddAttachmentTv"
            android:gravity="center"
            android:padding="@dimen/paddingTextViewAddAttachment"
            android:text="@string/textAddAttachmentLable"
            android:textAllCaps="true"
            android:textColor="@color/textAddAttachmentFormTitle"
            android:textSize="@dimen/textSizeAddAttachmentTitle"
            fontify:font_name="@string/fontName_hevelicaLight" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingAddAttachmentTableLayout"
            android:stretchColumns="*">

            <TableRow
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/libraryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginAddAttachmentTableLayout"
                    android:src="@drawable/library_iicon" />

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginAddAttachmentTableLayout"
                    android:src="@drawable/camera_iicon" />

                <ImageView
                    android:id="@+id/barcodeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginAddAttachmentTableLayout"
                    android:src="@drawable/barcode_iicon" />
            </TableRow>


        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backGroundDividerLine" />

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backAddAttachmentBottomCancelButton"
            android:gravity="center"
            android:padding="@dimen/paddingAddAttachmentCancelBtn"
            android:text="@string/textCancelLable"
            android:textAllCaps="true"
            android:textColor="@color/textAddAttachmentBottomCancelButton"
            android:textSize="@dimen/textSizeCancelTextSize"
            fontify:font_name="@string/fontName_hevelicaLight" />
    </LinearLayout>

</LinearLayout>