<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semiTransparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/widthNewSigantureFactureLinearLayout"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/categoryNameTv"
            style="@style/styleDomainDialogHeaderLogin"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:padding="@dimen/paddingLoginDomainDialogTextView"
            fontify:font_name="@string/fontName_avenir" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightMultiDialogContainer"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/containerViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


            </LinearLayout>

        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingTrackinghoursofOperationDataTv"
            android:background="@color/divider_bg_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimenMarginClientDialog"
            android:paddingRight="@dimen/dimenMarginClientDialog"
            android:paddingTop="@dimen/dimenMarginClientDialog">

            <Button
                android:id="@+id/btn_cancel"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimenMarginClientDialog"
                android:layout_toLeftOf="@+id/btn_save"
                android:text="@string/textCancelLable"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeLableModifyCancleTvEnterDataDialog" />

            <Button
                android:id="@+id/btn_save"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/modifier"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeLableModifyCancleTvEnterDataDialog" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>