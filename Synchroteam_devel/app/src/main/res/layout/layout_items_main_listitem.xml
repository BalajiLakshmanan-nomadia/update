<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<LinearLayout
    android:id="@+id/linear_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/background_light"
     android:padding="@dimen/paddingItemsMainListItemRelativeLayout"
     >

        <com.synchroteam.TypefaceLibrary.TextView
        android:id="@+id/itemCategoryTv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        fontify:font_name="@string/fontName_hevelicaLight"
        android:textSize="@dimen/textSizeCategoryTvitems"
        android:textColor="@color/textHeadetTvCatalougue"
         />

    <ImageView
        android:id="@+id/expandCollapseIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/marginRightItemsMainListItemExpandCollapseIcon"
        android:src="@drawable/arrow_down_catalouge" />

</LinearLayout>




</LinearLayout>