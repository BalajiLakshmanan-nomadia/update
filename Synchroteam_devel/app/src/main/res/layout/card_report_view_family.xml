<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/paddingMenusTitle"
    app:cardElevation="@dimen/paddingMenusTitle"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/txt_family_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbarColor"
            android:gravity="start"
            android:padding="@dimen/paddingTopOrangeButton"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeJobNameTextView"
            fontify:font_name="@string/fontName_avenir" />

        <LinearLayout
            android:id="@+id/lin_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/paddingTopOrangeButton" />

    </LinearLayout>
</androidx.cardview.widget.CardView>