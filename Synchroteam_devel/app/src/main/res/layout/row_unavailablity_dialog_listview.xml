<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/select_icon_bg" />

    <com.synchroteam.TypefaceLibrary.TextViewAvenirMedium
        android:id="@+id/txtIssueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey_new"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/paddingReportsTextTabsReports"
        android:singleLine="true"
        android:text="@string/txt_activity"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSizeDateDetailsTextView"
        android:textStyle="bold" />

</LinearLayout>