<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_serial_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/txt_sorting_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/paddingTopOrangeButton"
            android:paddingBottom="@dimen/paddingTopOrangeButton"
            android:paddingTop="@dimen/paddingTopOrangeButton"
            android:text="@string/app_name"
            android:textColor="@color/backGroundDividerLine"
            android:textSize="@dimen/textSizeDaysTv"
            fontify:font_name="@string/fontName_hevelicaLight"/>

        <TextView
            android:id="@+id/txt_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/paddingMenusTitle"
            android:text="@string/fa_check_circle"
            android:textColor="@color/unavailability_start_icon_color"
            android:textSize="@dimen/textSizeDaysTv"
            android:visibility="invisible"/>

        <com.synchroteam.TypefaceLibrary.EditText
            android:id="@+id/ed_soting_job_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/marginTopSyncroteamLoginimageView1"
            android:layout_below="@+id/txt_sorting_option"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginTopSyncroteamLoginimageView1"
            android:layout_marginRight="@dimen/marginTopSyncroteamLoginimageView1"
            android:layout_marginTop="@dimen/paddingMenusTitle"
            android:background="@color/text_container_bg"
            android:gravity="center"
            android:hint="@string/txt_job_number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="@dimen/paddingMenusTitle"
            android:paddingRight="@dimen/paddingMenusTitle"
            android:textColor="@color/backGroundDividerLine"
            android:textColorHint="@color/invoice_hint_color"
            android:textSize="@dimen/textSizeStartTimeTv"
            android:visibility="visible"/>

        <View
            android:id="@+id/view_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingTrackinghoursofOperationDataTv"
            android:layout_below="@+id/ed_soting_job_number"
            android:layout_marginTop="@dimen/paddingMenusTitle"
            android:background="@color/divider_bg_color"/>
    </RelativeLayout>
</RelativeLayout>