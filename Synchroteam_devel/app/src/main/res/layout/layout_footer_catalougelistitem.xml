    <LinearLayout
        android:id="@+id/addItemContainer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightFooterCatalougeListItemaddItemContainer"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingTopLinearLayoutCatalougeJobDetail">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/addcell" />

        <com.synchroteam.TypefaceLibrary.TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/paddingFooterCatalougeListItemaddItemTv"
            android:text="@string/textAddItem"
            android:textAllCaps="true"
            android:textColor="@color/textAddItemCatalougeListItem"
            android:textSize="@dimen/textSizeCatalougeAddItem"
            fontify:font_name="@string/fontName_hevelicaLight" />
    </LinearLayout>

