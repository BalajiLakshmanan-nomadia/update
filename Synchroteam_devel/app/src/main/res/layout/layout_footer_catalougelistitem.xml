    <com.synchroteam.TypefaceLibrary.TextView
        android:id="@+id/totalTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:padding="@dimen/paddingFooterCatalougeListItemtotalTv"
        android:textColor="@color/textTotalData"
        android:textSize="@dimen/textSizeCatalougeTotalData"
        fontify:font_name="@string/fontName_hevelicaLight" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/paddingFooterCatalougeListRelativelayout">

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/customerSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/containerSignature"
            android:layout_alignParentLeft="true"
            android:text="@string/textCustomerSignatureLableTv"
            android:textColor="@color/textCustomerSignatureLableCatalouge"
            android:textSize="@dimen/textSizeCatalougeSustomerSignatureLable"
            fontify:font_name="@string/fontName_hevelicaLight" />

        <LinearLayout
            android:id="@+id/containerSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customerSignatureDataTv"
                android:layout_width="@dimen/widthFooterCatalougeListcustomerSignatureDataTv"
                android:layout_height="@dimen/heightFooterCatalougeListcustomerSignatureDataTv"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/mySignatureIconIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/signature_icon" />
        </LinearLayout>
    </RelativeLayout>

