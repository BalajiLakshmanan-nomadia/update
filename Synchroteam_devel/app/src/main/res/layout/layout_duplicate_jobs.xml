<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/belowView"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backColorLableMandatoryFiled"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/txt_hotline_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/textJobCustomerLableTv"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textColorHint="@color/hintEditTextNewJob"
                    android:textSize="@dimen/textSizeLableClientFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/targetCorporationEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textJobCustomerLableTv"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/hintEditTextNewJob"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

                <TextView
                    android:id="@+id/mapTargetCorporationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"

                    android:singleLine="false"
                    android:text="@string/textNearestClientNewJob"
                    android:textColor="@color/textColorOrangeNewJob"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/siteEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textSiteLable"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/equipmentsEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textEquipmentLable"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.EditText
                    android:id="@+id/addressEt"
                    style="@style/EditTextAppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:focusableInTouchMode="true"
                    android:hint="@string/textAddressLable"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/hintEditTextNewJob"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

                <ImageView
                    android:id="@+id/mapAddressIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginRightNewJobsmapAddressIcon"
                    android:onClick="geocoder"
                    android:src="@drawable/map_org_icon_selected"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.EditText
                    android:id="@+id/additionalAddressEt"
                    style="@style/EditTextAppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:focusableInTouchMode="true"
                    android:hint="@string/textAdditionalAddressLable"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <!--    <Spinner
                       android:id="@+id/jobTypeSpinner"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/heightSpinnerNewJob" /> -->

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/jobTypeLabelTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightSpinnerNewJob"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textJobTypeLable"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <!--          <Spinner
                             android:id="@+id/reportsSpinner"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/heightSpinnerNewJob" /> -->

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/reportTemplateLabelTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightSpinnerNewJob"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textJobReportLable"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingNewJobsLinearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.EditText
                    android:id="@+id/Ajoutdescription"
                    style="@style/EditTextAppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:hint="@string/textDescriptionLable"
                    android:padding="@dimen/paddingNewJobsTextView"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </LinearLayout>

            <com.synchroteam.TypefaceLibrary.TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftNewJobsTextView6"
                android:text="@string/planning"
                android:textColor="#000"
                android:textSize="@dimen/textSizeLableMandatoryFields"
                fontify:font_name="@string/fontName_hevelicaLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftNewJobsLinearLayout"
                android:layout_marginRight="@dimen/marginRightNewJobsLinearLayout"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mandatoryicon"
                        android:visibility="invisible" />

                    <com.synchroteam.TypefaceLibrary.EditText
                        android:id="@+id/dateDebut"
                        style="@style/EditTextAppTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/black_apptheme_edit_text_holo_light"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/textDateStartDate"
                        android:onClick="showDate"
                        android:textColor="@color/textDataItemsTv"
                        android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                        android:textSize="@dimen/textSizeLableMandatoryFields"
                        fontify:font_name="@string/fontName_hevelicaLight" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mandatoryicon"
                        android:visibility="invisible" />

                    <com.synchroteam.TypefaceLibrary.EditText
                        android:id="@+id/heurDebut"
                        android:layout_weight="3"
                        style="@style/EditTextAppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_apptheme_edit_text_holo_light"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/textStartTimeLable"
                        android:onClick="showTime1"
                        android:textColor="@color/textDataItemsTv"
                        android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                        android:textSize="@dimen/textSizeLableMandatoryFields"
                        fontify:font_name="@string/fontName_hevelicaLight" />

                    <ImageView

                        android:id="@+id/clearScheduleDataIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/close_icon"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftNewJobsLinearLayout"
                android:layout_marginRight="@dimen/marginRightNewJobsLinearLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mandatoryicon"
                        android:visibility="invisible" />

                    <com.synchroteam.TypefaceLibrary.EditText
                        android:id="@+id/dateDebutfin"
                        style="@style/EditTextAppTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/black_apptheme_edit_text_holo_light"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/textDateEndDate"
                        android:onClick="showDateEnd"
                        android:textColor="@color/textDataItemsTv"
                        android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                        android:textSize="@dimen/textSizeLableMandatoryFields"
                        fontify:font_name="@string/fontName_hevelicaLight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mandatoryicon"
                        android:visibility="invisible" />

                    <com.synchroteam.TypefaceLibrary.EditText
                        android:id="@+id/heurFin"
                        style="@style/EditTextAppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_apptheme_edit_text_holo_light"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/textEndTimeLable"
                        android:onClick="showTime2"
                        android:textColor="@color/textDataItemsTv"

                        android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                        android:textSize="@dimen/textSizeLableMandatoryFields"
                        fontify:font_name="@string/fontName_hevelicaLight" />
                </LinearLayout>
            </LinearLayout>

            <com.synchroteam.TypefaceLibrary.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftNewJobsTextView6"
                android:text="@string/textMeetingLable"
                android:textColor="#000"
                android:textSize="@dimen/textSizeLableMandatoryFields"
                fontify:font_name="@string/fontName_hevelicaLight" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftNewJobsLinearLayout"
                android:layout_marginRight="@dimen/marginRightNewJobsLinearLayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.EditText
                    android:id="@+id/dateMeeting"
                    style="@style/EditTextAppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/textDateSmallLable"
                    android:onClick="showDateM"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mandatoryicon"
                    android:visibility="invisible" />

                <com.synchroteam.TypefaceLibrary.EditText
                    android:id="@+id/heurMeeting"
                    style="@style/EditTextAppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_apptheme_edit_text_holo_light"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/textStartTimeLable"
                    android:onClick="showTimeM"
                    android:textColor="@color/textDataItemsTv"
                    android:textColorHint="@color/textColorLableNonManadtoryMandatoryFiled"
                    android:textSize="@dimen/textSizeLableMandatoryFields"
                    fontify:font_name="@string/fontName_hevelicaLight" />

                <ImageView
                    android:id="@+id/clearMettingDataIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/close_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/paddingReportsJobDetailRelativeLayout"
                android:paddingLeft="@dimen/paddingLeftReportsJobDetailRelativeLayout"
                android:paddingRight="@dimen/paddingReportsJobDetailRelativeLayout"
                android:paddingTop="@dimen/paddingReportsJobDetailRelativeLayout">

                <ImageView
                    android:id="@+id/addAttachmentIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/marginRIghtReportsJobDetailaddAttachmentIconIv"
                    android:src="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/arrowButtonAttachIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/paddingReportsJobDetailarrowButtonAttachIv"
                    android:src="@drawable/arrow_down" />

                <com.synchroteam.TypefaceLibrary.TextView
                    android:id="@+id/titleAttachmentTv"
                    style="@style/styleHeadingsTextViewAttachmentTitle"
                    android:layout_alignTop="@+id/arrowButtonAttachIv"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/arrowButtonAttachIv"
                    android:text="@string/textAttachmentLableTv"
                    android:textAllCaps="true"
                    fontify:font_name="@string/fontName_hevelicaLight" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/attachmentListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/belowView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/cancelTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backCancelOkTvNewJob"
            android:gravity="center"
            android:text="@string/textClear"
            android:textAllCaps="true"
            android:textColor="@color/textCancelOkTvNewJob"
            android:textSize="@dimen/textSizeLableMandatoryFields"
            fontify:font_name="@string/fontName_hevelicaLight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dividerline" />

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/okTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backCancelOkTvNewJob"
            android:gravity="center"
            android:text="@string/textOkLableNewJob"
            android:textAllCaps="true"
            android:textColor="@color/textCancelOkTvNewJob"
            android:textSize="@dimen/textSizeLableMandatoryFields"
            fontify:font_name="@string/fontName_hevelicaLight" />
    </LinearLayout>

</RelativeLayout>