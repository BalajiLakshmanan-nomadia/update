<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semiTransparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/paddingLoginDomainDialogLinearLayout">

    <com.synchroteam.TypefaceLibrary.TextView
        style="@style/styleDomainDialogHeaderLogin"
        android:gravity="center"
        android:padding="@dimen/paddingLoginDomainDialogTextView"
        android:text="@string/msg_error"
        fontify:font_name="@string/fontName_hevelicaLight" />

    <com.synchroteam.TypefaceLibrary.TextView
        android:id="@+id/txtErrMsg"
        style="@style/styleDoaminDIalogText"
        android:background="@color/backMessaeTvWipeAllDetailDialog"
        android:padding="@dimen/paddingLoginDomainDialogTextView"
        android:text="@string/msg_error_auth"
        android:textColor="@color/textMessageWipeAllDetailDialog"
        fontify:font_name="@string/fontName_hevelicaLight" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgoundBorderColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.synchroteam.TypefaceLibrary.Button
            android:id="@+id/okBtn"
            style="@style/styleConfirmButtonWipeAllDetailsText"
            android:layout_width="match_parent"
            android:background="@color/backNoTvWipeAllDetailDialog"
            android:padding="@dimen/paddingLoginDomainDialogButton"
            android:text="@string/textOkLable"
            android:textAllCaps="true" />
    </LinearLayout>

</LinearLayout>