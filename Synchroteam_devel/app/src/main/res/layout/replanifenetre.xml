<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/marginLeftreplanifEnterParent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.synchroteam.TypefaceLibrary.TextView
        android:id="@+id/repDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="showDate"
        android:gravity="left"
        android:textColor="@color/textDataDuplicaiton"
        fontify:font_name="@string/fontName_hevelicaLight"
        android:textSize="@dimen/textSizeRepDateReplanIfEnter" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/repHeurDeb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textColor="@color/textDataDuplicaiton"
            android:gravity="left"
            fontify:font_name="@string/fontName_hevelicaLight"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="showTime1"
            android:textSize="@dimen/textSizeRepHeurDebReplanIfEnter" />
        

        <com.synchroteam.TypefaceLibrary.TextView
            android:id="@+id/repHeurFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="false"
            android:focusable="false"
            android:gravity="left"
            android:textColor="@color/textDataDuplicaiton"
            fontify:font_name="@string/fontName_hevelicaLight"
            android:focusableInTouchMode="false"
            android:onClick="showTime2"
            android:textSize="@dimen/textSizeRepHeurFinReplanIfEnter" />
    
    </LinearLayout>

</LinearLayout>