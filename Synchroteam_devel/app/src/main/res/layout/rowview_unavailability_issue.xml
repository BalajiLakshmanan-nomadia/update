<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/paddingMenusTitle" >

    <FrameLayout
        android:layout_width="@dimen/frameUnavailabilityWidth"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4" >

        <View
            android:id="@+id/viewIssueCircle"
            android:layout_width="@dimen/heightCustomFIeldValParent"
            android:layout_height="@dimen/heightCustomFIeldValParent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ring_green_issue" />

        <ImageView
            android:id="@+id/imgSelectTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/paddingMenusTitle"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />
    </FrameLayout>

    <com.synchroteam.TypefaceLibrary.TextView
        android:id="@+id/txtIssueName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/paddingMenusTitle"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Illness"
        android:textColor="@color/job_description_text_color"
        android:textSize="@dimen/textSizeTrackingSettingsLableTv"
        fontify:font_name="@string/fontName_avenir" />

</LinearLayout>